<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.PrimaryController">
   <children>
      <Label text="Welcome" />
      <Button mnemonicParsing="false" onAction="#sendWarning" text="Send me a warning!" />
      <GridPane hgap="10" vgap="10" alignment="CENTER">
         <!-- Row 0 -->
         <Button fx:id="btn00" onAction="#sendPlaceMessage" GridPane.rowIndex="0" GridPane.columnIndex="0" text=" "/>
         <Button fx:id="btn01" onAction="#sendPlaceMessage" GridPane.rowIndex="0" GridPane.columnIndex="1" text=" "/>
         <Button fx:id="btn02" onAction="#sendPlaceMessage" GridPane.rowIndex="0" GridPane.columnIndex="2" text=" "/>

         <!-- Row 1 -->
         <Button fx:id="btn10" onAction="#sendPlaceMessage" GridPane.rowIndex="1" GridPane.columnIndex="0" text=" "/>
         <Button fx:id="btn11" onAction="#sendPlaceMessage" GridPane.rowIndex="1" GridPane.columnIndex="1" text=" "/>
         <Button fx:id="btn12" onAction="#sendPlaceMessage" GridPane.rowIndex="1" GridPane.columnIndex="2" text=" "/>

         <!-- Row 2 -->
         <Button fx:id="btn20" onAction="#sendPlaceMessage" GridPane.rowIndex="2" GridPane.columnIndex="0" text=" "/>
         <Button fx:id="btn21" onAction="#sendPlaceMessage" GridPane.rowIndex="2" GridPane.columnIndex="1" text=" "/>
         <Button fx:id="btn22" onAction="#sendPlaceMessage" GridPane.rowIndex="2" GridPane.columnIndex="2" text=" "/>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
